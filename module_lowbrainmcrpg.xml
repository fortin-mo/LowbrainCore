<?xml version="1.0" encoding="UTF-8"?>
<project name="module_lowbrainmcrpg" default="compile.module.lowbrainmcrpg">
  <dirname property="module.lowbrainmcrpg.basedir" file="${ant.file.module_lowbrainmcrpg}"/>
  
  <property name="module.jdk.home.lowbrainmcrpg" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.lowbrainmcrpg" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.lowbrainmcrpg" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.lowbrainmcrpg" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="lowbrainmcrpg.output.dir" value="${module.lowbrainmcrpg.basedir}/bin"/>
  <property name="lowbrainmcrpg.testoutput.dir" value="${module.lowbrainmcrpg.basedir}/bin"/>
  
  <path id="lowbrainmcrpg.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="lowbrainmcrpg.module.production.classpath">
    <path refid="${module.jdk.classpath.lowbrainmcrpg}"/>
    <pathelement location="${basedir}/spigot-api-1.10.2-R0.1-SNAPSHOT-shaded.jar"/>
  </path>
  
  <path id="lowbrainmcrpg.runtime.production.module.classpath">
    <pathelement location="${lowbrainmcrpg.output.dir}"/>
    <pathelement location="${basedir}/spigot-api-1.10.2-R0.1-SNAPSHOT-shaded.jar"/>
  </path>
  
  <path id="lowbrainmcrpg.module.classpath">
    <pathelement location="${lowbrainmcrpg.output.dir}"/>
    <path refid="${module.jdk.classpath.lowbrainmcrpg}"/>
    <pathelement location="${basedir}/spigot-api-1.10.2-R0.1-SNAPSHOT-shaded.jar"/>
  </path>
  
  <path id="lowbrainmcrpg.runtime.module.classpath">
    <pathelement location="${lowbrainmcrpg.output.dir}"/>
    <pathelement location="${basedir}/spigot-api-1.10.2-R0.1-SNAPSHOT-shaded.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.lowbrainmcrpg">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lowbrainmcrpg">
    <patternset refid="excluded.from.module.lowbrainmcrpg"/>
  </patternset>
  
  <path id="lowbrainmcrpg.module.sourcepath">
    <dirset dir="${module.lowbrainmcrpg.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lowbrainmcrpg" depends="compile.module.lowbrainmcrpg.production,compile.module.lowbrainmcrpg.tests" description="Compile module LowbrainMCRPG"/>
  
  <target name="compile.module.lowbrainmcrpg.production" depends="register.custom.compilers" description="Compile module LowbrainMCRPG; production classes">
    <mkdir dir="${lowbrainmcrpg.output.dir}"/>
    <javac2 destdir="${lowbrainmcrpg.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lowbrainmcrpg}/javac">
      <compilerarg line="${compiler.args.lowbrainmcrpg}"/>
      <bootclasspath refid="lowbrainmcrpg.module.bootclasspath"/>
      <classpath refid="lowbrainmcrpg.module.production.classpath"/>
      <src refid="lowbrainmcrpg.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lowbrainmcrpg"/>
    </javac2>
    
    <copy todir="${lowbrainmcrpg.output.dir}">
      <fileset dir="${module.lowbrainmcrpg.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lowbrainmcrpg.tests" depends="register.custom.compilers,compile.module.lowbrainmcrpg.production" description="compile module LowbrainMCRPG; test classes" unless="skip.tests"/>
  
  <target name="clean.module.lowbrainmcrpg" description="cleanup module">
    <delete dir="${lowbrainmcrpg.output.dir}"/>
    <delete dir="${lowbrainmcrpg.testoutput.dir}"/>
  </target>
</project>